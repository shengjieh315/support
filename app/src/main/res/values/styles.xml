<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Main">
        <item name="android:windowDisablePreview">true</item>

    </style>


    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension" />
        <attr name="sl_shadowRadius" format="dimension" />
        <attr name="sl_shadowColor" format="color" />
        <attr name="sl_pressed_bg" format="reference" />
        <attr name="sl_bg" format="boolean" />
        <attr name="sl_bg_dp" format="dimension" />
        <attr name="sl_dx" format="dimension" />
        <attr name="sl_dy" format="dimension" />
    </declare-styleable>


    <declare-styleable name="RefreshLayout">
        <attr name="enabled_up" format="boolean" />
        <attr name="enabled_down" format="boolean" />
        <attr name="style_up" format="enum">
            <enum name="classic" value="0" />
            <enum name="upper" value="1" />
            <enum name="lower" value="2" />
            <enum name="mid" value="3" />
        </attr>
        <attr name="style_down" format="enum">
            <enum name="classic" value="0" />
            <enum name="upper" value="1" />
            <enum name="lower" value="2" />
            <enum name="mid" value="3" />
        </attr>
        <attr name="friction" format="float" />
        <attr name="duration" format="integer" />
        <attr name="smooth_length" format="integer" />
        <attr name="smooth_duration" format="integer" />
        <attr name="bg_up" format="reference" />
        <attr name="bg_down" format="reference" />
        <attr name="is_coo" format="boolean" />
    </declare-styleable>

    <style name="AppTheme.Full">

        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="AppTheme.Full.Back">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>

        <item name="colorControlNormal">@color/colorBlackB6</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/colorBlackB6</item>

    </style>

    <style name="AppTheme.Main.Back">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>

    </style>


    <style name="AppTheme.Back">

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>

    </style>

</resources>
